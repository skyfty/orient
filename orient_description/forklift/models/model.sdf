<?xml version="1.0"?>
<sdf version="1.7">
  <model name="forklift">
    <!-- 定义材料颜色 -->
    <material>
      <script>
        <name>Gazebo/Red</name>
        <uri>file://media/materials/scripts/gazebo.material</uri>
      </script>
    </material>
    <material>
      <script>
        <name>Gazebo/Black</name>
        <uri>file://media/materials/scripts/gazebo.material</uri>
      </script>
    </material>
    <material>
      <script>
        <name>Gazebo/Blue</name>
        <uri>file://media/materials/scripts/gazebo.material</uri>
      </script>
    </material>
    <material>
      <script>
        <name>Gazebo/Green</name>
        <uri>file://media/materials/scripts/gazebo.material</uri>
      </script>
    </material>

    <!-- 地面投影基准坐标系 -->
    <link name="base_footprint">
      <pose>0 0 0 0 0 0</pose>
    </link>

    <!-- 底盘 -->
    <link name="base_link">
      <pose>0.0 0 0.658 0 0 0</pose>
      <inertial>
        <pose>-0.15 0 0 0 0 0</pose>
        <mass>100</mass>
        <inertia>
          <ixx>20.833333333333332</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>46.16666666666666</iyy>
          <iyz>0</iyz>
          <izz>62.83333333333332</izz>
        </inertia>
      </inertial>
      
      <collision name="base_collision">
        <pose>-0.1 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>2.3 1.5 0.5</size>
          </box>
        </geometry>
        <surface>
          <contact>
            <ode>
              <min_depth>0.001</min_depth>
              <kp>1e8</kp>
              <kd>1</kd>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="base_visual">
        <geometry>
          <box>
            <size>2.3 1.5 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Blue</name>
          </script>
        </material>
      </visual>

    </link>

    <!-- base_footprint 到 base_link 的连接 -->
    <joint name="base_footprint_joint" type="fixed">
      <parent>base_footprint</parent>
      <child>base_link</child>
    </joint>

    <!-- 激光雷达 -->
    <link name="scanner_link">
      <pose>1.0 0 0.958 0 0 0</pose> 
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      
      <collision name="scanner_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
      
      <visual name="scanner_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      
      <!-- 激光雷达传感器 -->
      <sensor name="laser_sensor" type="ray">
        <pose>0 0 0 0 0 0</pose>
        <always_on>true</always_on>
        <visualize>false</visualize>
        <update_rate>20</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>3000</samples>
              <resolution>1.000000</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.10</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="laser_plugin" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>scanner_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <joint name="scanner_joint" type="fixed">
      <parent>base_link</parent>
      <child>scanner_link</child>
    </joint>


    <!-- 前轮转向连接件 -->
    <link name="front_wheel_steering">
      <pose>0.85 0 0.2 0 0 0</pose>
      
      <visual name="front_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.02</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- 前轮转向关节 -->
    <joint name="front_wheel_steer_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_wheel_steering</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14</lower>
          <upper>3.14</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- 前轮 -->
    <link name="front_wheel">
      <pose>0.85 0 0.2 0 0 0</pose>
      <inertial>
        <pose>0 0 0 1.5708 0 0</pose>
        <mass>40</mass>
        <inertia>
          <ixx>0.108</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.6</iyy>
          <iyz>0</iyz>
          <izz>0.108</izz>
        </inertia>
      </inertial>
      
      <collision name="front_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <max_contacts>10</max_contacts>
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1000.0</mu>
              <mu2>500</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e7</kp>
              <kd>500</kd>
              <min_depth>0.005</min_depth>
              <contact_model>box</contact_model>
              <surface_layer>0.005</surface_layer>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="front_wheel_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://turtlebot3_common/meshes/wheels/left_tire.stl</uri>
            <scale>0.0065 0.0065 0.0065</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_wheel_joint" type="revolute">
      <parent>front_wheel_steering</parent>
      <child>front_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
        </limit>
      </axis>
    </joint>

    <!-- 左后轮 -->
    <link name="left_rear_wheel">
      <pose>-0.85 0.8 0.2 0 0 0</pose>
      <inertial>
        <pose>0 0 0 1.5708 0 0</pose>
        <mass>20</mass>
        <inertia>
          <ixx>0.0542</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.0542</izz>
        </inertia>
      </inertial>
      
      <collision name="left_rear_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <max_contacts>10</max_contacts>
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1000.0</mu2>
              </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e+13</kp>
              <kd>1</kd>
              <min_depth>0.001</min_depth>
              <max_vel>0.1</max_vel>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="left_rear_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://turtlebot3_common/meshes/wheels/left_tire.stl</uri>
            <scale>0.0065 0.0065 0.0065</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="left_rear_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_rear_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
        </limit>
        <dynamics>
          <damping>0.2</damping>
          <friction>0.5</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- 右后轮 -->
    <link name="right_rear_wheel">
      <pose>-0.85 -0.8 0.2 0 0 0</pose>
      <inertial>
        <pose>0 0 0 1.5708 0 0</pose>
        <mass>20</mass>
        <inertia>
          <ixx>0.0542</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.0542</izz>
        </inertia>
      </inertial>
      
      <collision name="right_rear_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1000.0</mu2>
              </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e+13</kp>
              <kd>1</kd>
              <min_depth>0.001</min_depth>
              <max_vel>0.1</max_vel>
            </ode>
          </contact>
        </surface>
      </collision>
      
      <visual name="right_rear_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://turtlebot3_common/meshes/wheels/right_tire.stl</uri>
            <scale>0.0065 0.0065 0.0065</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1.0</ambient>
          <diffuse>0.2 0.2 0.2 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="right_rear_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_rear_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
        </limit>
        <dynamics>
          <damping>0.2</damping>
          <friction>0.5</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Gazebo 插件 -->
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>100</update_rate>
      <joint_name>front_wheel_steer_joint</joint_name>
      <joint_name>front_wheel_joint</joint_name>
      <joint_name>left_rear_wheel_joint</joint_name>
      <joint_name>right_rear_wheel_joint</joint_name>
    </plugin>

    <plugin name="ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <update_rate>100</update_rate>
      <front_drive_joint>front_wheel_joint</front_drive_joint>
      <front_steering_joint>front_wheel_steer_joint</front_steering_joint>
      <rear_left_joint>left_rear_wheel_joint</rear_left_joint>
      <rear_right_joint>right_rear_wheel_joint</rear_right_joint>
      <max_steer>1.57</max_steer>
      <max_speed>20</max_speed>
      
      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>false</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_topic>odometry/sim</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>

    
  </model>
</sdf>